@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Hosting
@using Microsoft.Extensions.Logging
@inherits Microsoft.AspNetCore.Components.Web.ErrorBoundary
@inject ILogger<Quilt4NetErrorBoundary> Logger
@inject IHostEnvironment Environment

@if (CurrentException is null)
{
    @ChildContent
}
else
{
    <div class="error-content">
        <h3>Something went wrong!</h3>

        @if (ErrorContent is not null)
        {
            @ErrorContent(CurrentException)
        }
        else
        {
            @if (Environment.IsDevelopment())
            {
            <div class="dev-error-details">
                <strong>Exception Message:</strong> @CurrentException.Message
                <br />
                <strong>Stack Trace:</strong>
                <pre>@CurrentException.StackTrace</pre>
            </div>
            }
            else
            {
                <p>We encountered an unexpected error.</p>
            }
        }
        <CascadingAuthenticationState>
            <AuthorizeView Roles="Developer">
                <Authorized>
                    <p>This error has been logged with CorrelationId <i><RadzenLink Path="@($"/developer/log/search/{_correlationId}")">@_correlationId</RadzenLink></i>.</p>
                </Authorized>
                <NotAuthorized>
                    <p>This error has been logged with CorrelationId <i>@_correlationId</i>.</p>
                </NotAuthorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
        @* <p>This error has been logged with CorrelationId <i>@_correlationId</i>. <ClipboardCopy Content="@($"{_correlationId}")" /></p> *@
        <button class="btn btn-primary" @onclick="Recover">Try to recover</button>
    </div>
}

