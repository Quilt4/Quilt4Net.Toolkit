<RadzenRow Style="margin-bottom: 6px;">
    <RadzenColumn>
        <RadzenStack Orientation="Orientation.Vertical">
            <RadzenText TextStyle="TextStyle.Caption" Text="Range"/>
            <LogRangeView OnSelected="OnRangeSelected"/>
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>

<RadzenTabs Change="StateHasChanged" Visible="@(_range != null)">
    <Tabs>
        <RadzenTabsItem Text="Search">
            <LogSearchView Range="@_range" />
        </RadzenTabsItem>
        <RadzenTabsItem Text="Summary">
            <LogSummaryView Range="@_range" />
        </RadzenTabsItem>
    </Tabs>
</RadzenTabs>

@code {
    private LogRangeView.TimeRangeOption _range;

    private void OnRangeSelected(LogRangeView.TimeRangeOption range)
    {
        _range = range;
        StateHasChanged();
    }
}
